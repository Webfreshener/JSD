{
  "__COLLECTIONS__": {
    "type": "Object",
    "required": false,
    "properties": {
      "type": "Schema",
      "required": false,
      "extensible": true
    }
  },
  "__OPTIONS__": {
    "type": "Object",
    "required": true,
    "extensible": true,
    "properties": {
      "ALLOWED": {
        "type": "Array",
        "required": true,
        "properties": {
          "type": "String",
          "required": false
        }
      },
      "VERSION": {
        "type": "String",
        "required": false,
        "restrict": [
          "\\\\bv?(?:0|[1-9]\\\\d*)\\\\.(?:0|[1-9]\\\\d*)\\\\.(?:0|[1-9]\\\\d*)(?:-[\\\\da-z\\\\-]+(?:\\\\.[\\\\da-z\\\\-]+)*)?(?:\\\\+[\\\\da-z\\\\-]+(?:\\\\.[\\\\da-z\\\\-]+)*)?\\\\b",
          "ig"
        ]
      },
      "APP_ID": {
        "type": "String",
        "required": true,
        "restrict": "^[a-zA-Z0-9]{1,24}$"
      },
      "APP_ID_PARAM_NAME": {
        "type": "String",
        "required": false
      },
      "REST_KEY": {
        "type": "String",
        "required": false,
        "restrict": "^[a-zA-Z0-9]{16,32}$"
      },
      "REST_KEY_PARAM_NAME": {
        "type": "String",
        "required": false,
        "default": "REST_KEY"
      },
      "SESSION_TOKEN": {
        "type": "String",
        "required": false,
        "restrict": "^[a-zA-Z0-9]{16,32}$"
      },
      "SESSION_KEY": {
        "type": "String",
        "required": true,
        "restrict": "^[a-zA-Z0-9]{1,24}$",
        "default": "AUTHORIZATION"
      },
      "CSRF_TOKEN": {
        "type": "String",
        "required": false,
        "restrict":  "^[a-zA-Z0-9]{16,32}$"
      },
      "API_VERSION": {
        "type": "String",
        "required": true,
        "default": "1"
      },
      "MAX_BATCH_SIZE": {
        "type": "Number",
        "required": false,
        "default": 50
      },
      "DEFAULT_FETCH_LIMIT_OVERRIDE": {
        "type": "Number",
        "required": false,
        "default": 50000
      },
      "UNDEFINED_CLASSNAME": {
        "type": "String",
        "required": false,
        "default": "__UNDEFINED_CLASSNAME__"
      },
      "API_URI": {
        "type": "String",
        "required": false
      },
      "CORS": {
        "type": "Boolean",
        "required": false,
        "default": false
      },
      "PROTOCOL": {
        "type": "String",
        "required": false,
        "default": "http",
        "restrict": ["^(HTTP)+S?$", "i"]
      },
      "HOST": {
        "type": "String",
        "required": false,
        "default": "127.0.0.1",
        "restrict": "^(?:[0-9]{1,3}\\\\.){3}[0-9]{1,3}$"
      },
      "PORT": {
        "type": "Number",
        "required": false,
        "default": 3000
      },
      "BASE_PATH": {
        "type": "String",
        "required": false,
        "default": "/api",
        "restrict": "^\\\\/+[a-zA-Z0-9_\\\\/\\\\.\\\\-]+$"
      },
      "CAPITALIZE_CLASSNAMES": {
        "type": "Boolean",
        "required": false,
        "default": true
      },
      "QUERY_PARAM": {
        "type": "String",
        "required": false
      },
      "CRUD_METHODS": {
        "type": "Object",
        "required": true,
        "extensible": false,
        "default": {
          "create": "POST",
          "read": "GET",
          "update": "PUT",
          "destroy": "DELETE"
        },
        "properties": {
          "create": {
            "type": "String",
            "required": false,
            "restrict": "^POST+$"
          },
          "read": {
            "type": "String",
            "required": false,
            "restrict": "^GET+$"
          },
          "update": {
            "type": "String",
            "required": false,
            "restrict": "^PUT+$"
          },
          "destroy": {
            "type": "String",
            "required": false,
            "restrict": "^DELETE+$"
          }
        }
      }
    },
    "default": {
      "ALLOWED": [
        "APP_ID",
        "REST_KEY",
        "HOST",
        "PORT",
        "BASE_PATH",
        "MAX_BATCH_SIZE",
        "DEFAULT_FETCH_LIMIT_OVERRIDE",
        "UNDEFINED_CLASSNAME"
      ],
      "VERSION": "0.1.1-alpha",
      "APP_ID": "LOCAL",
      "APP_ID_PARAM_NAME": "APP_ID",
      "REST_KEY_PARAM_NAME": "REST_KEY",
      "SESSION_KEY": "AUTHORIZATION",
      "API_VERSION": "1",
      "MAX_BATCH_SIZE": 50,
      "DEFAULT_FETCH_LIMIT_OVERRIDE": 200000,
      "UNDEFINED_CLASSNAME": "__UNDEFINED_CLASSNAME__",
      "API_URI": "/api/1",
      "CORS": true,
      "PROTOCOL": "HTTP",
      "HOST": "0.0.0.0",
      "PORT": 80,
      "BASE_PATH": "/api",
      "CAPITALIZE_CLASSNAMES": false,
      "QUERY_PARAM": "filter",
      "CRUD_METHODS": {
        "create": "POST",
        "read": "GET",
        "update": "PUT",
        "destroy": "DELETE"
      }
    }
  }
}
