{
  "extensible": true,
  "elements": {
    "NestedObjects": {
      "type": "Object",
      "required": false,
      "extensible": true,
      "elements": {
        "anArray": {
          "type": "Array",
          "required": false,
          "default": [
            "foo",
            "bar"
          ],
          "elements": [
            {
              "type": "String",
              "required": false
            }
          ]
        },
        "anObject": {
          "type": "Object",
          "required": false,
          "extensible": false,
          "default": {
            "aString": "TEST",
            "aObject": {
              "someValue": 0
            },
            "aDeepObject": {
              "aDeepParam": "foo",
              "aDeeperObject": {
                "aDeepParam": "string2"
              }
            }
          },
          "elements": {
            "aString": {
              "type": "String",
              "required": true,
              "restrict": "^TEST+$"
            },
            "aObject": {
              "type": "Object",
              "required": true,
              "extensible": true
            },
            "aDeepObject": {
              "type": "Object",
              "required": true,
              "extensible": false,
              "elements": {
                "aDeepParam": {
                  "type": "String",
                  "required": true,
                  "restrict": "^[a-zA-Z0-9\\\\s]+$"
                },
                "aDeeperObject": {
                  "type": "Object",
                  "required": false,
                  "extensible": false,
                  "elements": {
                    "aDeepParam": {
                      "type": "String",
                      "required": true,
                      "restrict": "^[a-zA-Z0-9\\\\s]+$"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}