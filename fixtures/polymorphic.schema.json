{
  "*": {
    "polymorphic": [
      {
        "type": "String",
        "restrict": "^[a-zA-Z0-9_\\s]+$"
      },
      {
        "type": "Object",
        "properties": {
          "id": {
            "type": "Number",
            "required": true
          },
          "name": {
            "type": "String",
            "required": true,
            "restrict": "^[a-zA-Z0-9_]+$"
          },
          "desc": {
            "type": "String",
            "restrict": "^[a-zA-Z0-9_\\s]+$"
          }
        }
      },
      {
        "type": "Object",
        "properties": {
          "id": {
            "type": "Number",
            "required": true
          },
          "active": {
            "type": "Boolean",
            "required": true
          }
        }
      }
    ]
  }
}